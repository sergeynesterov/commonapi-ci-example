cmake_minimum_required( VERSION 2.8.2 )

project( dlt-daemon-download NONE )

include( ExternalProject )
ExternalProject_Add( dlt-daemon
   GIT_REPOSITORY    "https://github.com/GENIVI/dlt-daemon.git"
   GIT_TAG           "v${DLT_VERSION}"
   PREFIX            "${DLT_DIR}"
   BINARY_DIR        "${DLT_DIR}/src/dlt-daemon-build/${CMAKE_CXX_COMPILER_ID}"
   BUILD_COMMAND     "${CMAKE_MAKE_PROGRAM}" -j $(nproc)
   CMAKE_ARGS        "-DCMAKE_INSTALL_PREFIX=${DLT_ROOT}"
                     "-DCMAKE_PROJECT_automotive-dlt_INCLUDE=${DLT_DIR}/FIX_CLANG_ERRORS.cmake"
)
